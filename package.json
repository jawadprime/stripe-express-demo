{
  "name": "stripe-express-demo",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "install": "npm install",
    "build:shared": "npm run build -w packages/shared",
    "build:api": "npm run build -w apps/api",
    "build": "npm run build -w packages/shared && npm run build -w apps/api && npm run build -w apps/event-consumer",
    "start:api": "npm run start -w apps/api",
    "start:event-consumer": "npm run start -w apps/event-consumer",
    "dev:api": "npm run dev -w apps/api",
    "dev:event-consumer": "npm run dev -w apps/event-consumer",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:event-consumer\"",
    "clean": "rimraf packages/shared/dist apps/api/dist apps/event-consumer/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jawad-prime-dev/stripe-express-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jawad-prime-dev/stripe-express-demo/issues"
  },
  "homepage": "https://github.com/jawad-prime-dev/stripe-express-demo#readme",
  "workspaces": [
    "packages/shared",
    "apps/api",
    "apps/event-consumer"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
